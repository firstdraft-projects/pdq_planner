<div class="page-header">
  <h1>
    People
    <a href="/people/new" class="btn btn-lg btn-success">New Person</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Relationship</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Meeting</th>
        <th>Actions</th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <td>
          <% if person.user.present? %>
            <a href="/users/<%= person.user.id %>">
              <%= person.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= person.name %></td>
        <td><img src='<%= person.photo %>' class='img-responsive'></td>
        <td><%= person.relationship %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td>
          <% if person.meeting.present? %>
            <a href="/shared_meetings/<%= person.meeting.id %>">
              <%= person.meeting.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/people/<%= person.id %>" class="btn btn-primary">Show</a>
          <a href="/people/<%= person.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_person/<%= person.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @people, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
