<div class="page-header">
  <h3>Person #<%= @person.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @person.user.present? %>
          <a href="/users/<%= @person.user_id %>">
            <%= @person.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @person.name %></dd>

      <dt>Photo</dt>
      <dd><img src="<%= @person.photo %>" class="img-responsive"></dd>

      <dt>Relationship</dt>
      <dd><%= @person.relationship %></dd>

      <dt>Phone</dt>
      <dd><%= @person.phone %></dd>

      <dt>Email</dt>
      <dd><%= @person.email %></dd>

      <dt>Meeting</dt>
      <dd>
        <% if @person.meeting.present? %>
          <a href="/shared_meetings/<%= @person.meeting_id %>">
            <%= @person.meeting.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/people" class="btn btn-primary">
        Back
      </a>
      <a href="/people/<%= @person.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_person/<%= @person.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
